{{!-- list products  --}}
<div class="list-product" style="postion:absolute;">
  {{#each products}}
  <div class="row list_product">
    <div class="row row-cols-1 row-cols-md-3">
      {{#each this}}
      <div class="col mb-4">
        <div class="card">
          <a href="/detail-product/{{this._id}}">
            <img src="../../static/images/products/{{this.imagePath}}" alt="product image" class="card-img-top ">
          </a>
          <div class="card-body">
            <p class="card-title">{{this.name}}</p>
            <p class="card-text">$ {{this.price}}</p>
            <p>
              <a href="/add-to-cart/{{this._id}}" class="btn btn-light ml-auto button" role="button">
                + <i class="fas fa-shopping-cart"></i>
              </a>

              <a href="#" class="btn btn-dark mr-auto button" role="button">
                Mua ngay
              </a>
            </p>
          </div>
        </div>
      </div>
      {{/each}}
    </div>

  </div>
  {{/each}}
</div>